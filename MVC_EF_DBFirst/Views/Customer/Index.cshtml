@model MVC_EF_DBFirst.ViewModels.CustomerOrdersViewModel
@{
    ViewBag.Title = "Index";
}

<script src="~/Content/CustomersOrders/js/CustomersOrders.js"></script>

<div class="container">
    <h2>Customer Order Details</h2>
    <table class="table table-striped table-bordered table-hover">
        <thead class="header">
            <tr>
                <th class="displaynone">Customer ID</th>
                <th>Customer Name</th>
                <th>Contact Number</th>
                <th>Order Details</th>
                <th class="width10Percent">Edit</th>
                <th class="width10Percent">Delete</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model.customerList)
            {
                <tr>
                    <td class="displaynone">@item.CustomerID</td>
                    <td>@item.CustomerName</td>
                    <td>@item.ContactNumber</td>
                    <td>@item.OrderDate.ToShortDateString()</td>
                    <td class="width10Percent"><input type="button" onclick="onEdit(@item.CustomerID)" value="Edit" class="width100Percent btn btn-primary" /></td>
                    <td class="width10Percent"><input type="button" onclick="onDelete(@item.CustomerID)" value="Delete" class="width100Percent btn btn-danger" /></td>
                </tr>
            }
        </tbody>
    </table>
</div>

